<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:minHeight="50dp"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/tarjeta"
        android:layout_width="fill_parent"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:background="@color/principal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="16dp">


            <RelativeLayout
                android:id="@+id/relativeLayout31"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/noticia_circulo_gris"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/imagen"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/parada" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/compartir"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/compartir"
                android:padding="8dp" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/relativeLayout31"
                android:fontFamily="sans-serif-light"
                android:minLines="2"
                android:paddingBottom="2dp"
                android:text="Título"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titulo"
                android:layout_toStartOf="@+id/relativeLayout31"
                android:fontFamily="sans-serif-light"
                android:minLines="2"
                android:paddingTop="5dp"
                android:text="Use hierarchy within the card to direct users’ attention to the most important information. For example, place primary content at the top of the card, or use typography to emphasize primary content."
                android:textColor="#ddffffff"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/descripcion"
                android:layout_alignLeft="@+id/descripcion"
                android:layout_alignRight="@+id/descripcion"
                android:background="@drawable/gradiente_blanco"
                android:visibility="gone"></RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>