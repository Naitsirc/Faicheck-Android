<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#66bb6a"
    android:minHeight="50dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#5d93e2">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/elo"
            android:layout_marginBottom="-17dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/arte_parada_fondo_espera" />

        <RelativeLayout
            android:id="@+id/ulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/titulo"
                android:background="#60ffffff">

            </RelativeLayout>

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:minLines="1"
                android:paddingBottom="2dp"
                android:text="TÃ­tulo"
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/elo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ulo"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/relativeLayout"
                android:gravity="right|center_vertical">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/opc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_toStartOf="@+id/opc"
                android:background="@drawable/burbuja_gris"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/descripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_vertical|center_horizontal"
                        android:minLines="1"
                        android:paddingBottom="4dp"
                        android:text="12345"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/algo"
        android:gravity="center_vertical|center_horizontal">

        <RelativeLayout
            android:id="@+id/texco"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/actualizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:minLines="1"
                android:paddingBottom="2dp"
                android:text="Actualizado hace 0 minutos"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>