<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principal"
    tools:context=".FragmentoPrincipal">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/principal_oscuro" />

    <LinearLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/principal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/fondo_icon0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:id="@+id/fondo_icon10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/icono_info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/icono_transporte" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fondo_icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:id="@+id/fondo_icon11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/icono_noticias"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/icono_login" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fondo_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:id="@+id/fondo_icon12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/icono_mapa"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/icono_horario" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fondo_icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:id="@+id/fondo_icon13"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/icono_datos"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/icono_datos_usuario" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fondo_icon4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:id="@+id/fondo_icon14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/icono_favoritas"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/icono_info" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/barra"
        android:background="@drawable/gradiente_negro_girado">

    </RelativeLayout>

</RelativeLayout>
